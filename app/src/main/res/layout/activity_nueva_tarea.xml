<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityNuevaTarea">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Back Arrow -->
        <ImageView
            android:layout_marginTop="36dp"
            android:id="@+id/ivBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="start"
            android:src="@drawable/baseline_arrow_back_24"
            android:contentDescription="Back" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crear"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="36dp" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nueva Tarea"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <!-- Task Title Input -->
        <EditText
            android:id="@+id/etTaskTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="TÃ­tulo de Tarea"
            android:layout_marginTop="24dp"
            android:padding="16dp"
            android:background="@drawable/bg_task_title" />

        <!-- Date Selector -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="46dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/outline_calendar_today_24"
                android:contentDescription="Calendar" />

            <TextView
                android:minHeight="48dp"
                android:minWidth="48dp"
                android:padding="12dp"
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seleccionar fecha"
                android:layout_marginStart="16dp"
                android:textSize="16sp"
                android:textColor="#000000"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <!-- Time Selector -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="36dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/outline_alarm_24"
                android:contentDescription="Time" />

            <TextView
                android:minHeight="48dp"
                android:minWidth="48dp"
                android:padding="12dp"
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seleccionar hora"
                android:layout_marginStart="16dp"
                android:textSize="16sp"
                android:textColor="#000000"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <!-- Category Label -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Categoria"
            android:layout_marginTop="46dp"
            android:textStyle="bold"
            android:textSize="16sp" />

        <!-- Category Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="start">

            <Button
                android:id="@+id/btnDesign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DESIGN"
                android:backgroundTint="#F5F6FA"
                android:textColor="#44c686" />

            <Button
                android:id="@+id/btnFrontend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#F5F6FA"
                android:textColor="#44c686"
                android:text="FRONTEND"
                android:layout_marginStart="8dp" />

            <Button
                android:id="@+id/btnBackend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#F5F6FA"
                android:textColor="#44c686"
                android:text="BACKEND"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <Button
            android:layout_gravity="start"
            android:id="@+id/btnMarketing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F5F6FA"
            android:textColor="#44c686"
            android:text="MARKETING"
            android:layout_marginTop="8dp" />

        <!-- Create Task Button -->
        <Button
            android:id="@+id/btnCreateTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CREAR TAREA"
            android:layout_marginTop="56dp"
            android:backgroundTint="#44c686"
            android:textColor="#FFFFFF"
            android:textAllCaps="false" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>