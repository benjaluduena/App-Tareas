<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 1. Glow verde suave en los bordes -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="350dp"
                android:centerX="50%"
                android:centerY="50%"
                android:startColor="#2bc38b"
                android:endColor="#00110a"
                android:useLevel="false" />
            <corners android:radius="36dp" />
        </shape>
    </item>

    <!-- 2. Segundo gradiente diagonal para profundidad -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#2bc38b"
                android:endColor="#003324"
                android:type="linear" />
            <corners android:radius="36dp" />
        </shape>
    </item>

    <!-- 3. Contenido interno negro -->
    <item android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <solid android:color="#101010" />
            <corners android:radius="28dp" />
        </shape>
    </item>

</layer-list>
