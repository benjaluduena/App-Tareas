<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 1. Fondo con brillo verde suave en los bordes (efecto glow) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="350dp"
                android:centerX="50%"
                android:centerY="50%"
                android:startColor="#2bc38b"
                android:endColor="#ccffe0"
                android:useLevel="false" />
            <corners android:radius="36dp" />
        </shape>
    </item>

    <!-- 2. Segundo gradiente en diagonal para mÃ¡s profundidad -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#2bc38b"
                android:endColor="#F1FDF6"
                android:type="linear" />
            <corners android:radius="36dp" />
        </shape>
    </item>

    <!-- 3. Contenido blanco interno que deja ver el borde y degradado -->
    <item android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="28dp" />
        </shape>
    </item>

</layer-list>


